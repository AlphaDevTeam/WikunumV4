<?xml version="1.0" encoding="utf-8"?>
<databaseChangeLog
    xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.6.xsd">
    <!--
        Added the constraints for entity Job.
    -->
    <changeSet id="20191226092712-2" author="jhipster">
        
        <addForeignKeyConstraint baseColumnNames="status_id"
                                 baseTableName="job"
                                 constraintName="fk_job_status_id"
                                 referencedColumnNames="id"
                                 referencedTableName="job_status"/>

        <addForeignKeyConstraint baseColumnNames="history_id"
                                 baseTableName="job"
                                 constraintName="fk_job_history_id"
                                 referencedColumnNames="id"
                                 referencedTableName="document_history"/>

        <addForeignKeyConstraint baseColumnNames="location_id"
                                 baseTableName="job"
                                 constraintName="fk_job_location_id"
                                 referencedColumnNames="id"
                                 referencedTableName="location"/>

        <addForeignKeyConstraint baseColumnNames="customer_id"
                                 baseTableName="job"
                                 constraintName="fk_job_customer_id"
                                 referencedColumnNames="id"
                                 referencedTableName="customer"/>

        <addForeignKeyConstraint baseColumnNames="job_id"
                                 baseTableName="job_assigned_to"
                                 constraintName="fk_job_assigned_to_job_id"
                                 referencedColumnNames="id"
                                 referencedTableName="job"/>

        <addForeignKeyConstraint baseColumnNames="assigned_to_id"
                                 baseTableName="job_assigned_to"
                                 constraintName="fk_job_assigned_to_assigned_to_id"
                                 referencedColumnNames="id"
                                 referencedTableName="worker"/>
        
    </changeSet>
</databaseChangeLog>
