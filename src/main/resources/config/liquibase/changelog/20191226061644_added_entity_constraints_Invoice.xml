<?xml version="1.0" encoding="utf-8"?>
<databaseChangeLog
    xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.6.xsd">
    <!--
        Added the constraints for entity Invoice.
    -->
    <changeSet id="20191226061644-2" author="jhipster">
        
        <addForeignKeyConstraint baseColumnNames="history_id"
                                 baseTableName="invoice"
                                 constraintName="fk_invoice_history_id"
                                 referencedColumnNames="id"
                                 referencedTableName="document_history"/>

        <addForeignKeyConstraint baseColumnNames="pay_type_id"
                                 baseTableName="invoice"
                                 constraintName="fk_invoice_pay_type_id"
                                 referencedColumnNames="id"
                                 referencedTableName="payment_types"/>

        <addForeignKeyConstraint baseColumnNames="customer_id"
                                 baseTableName="invoice"
                                 constraintName="fk_invoice_customer_id"
                                 referencedColumnNames="id"
                                 referencedTableName="customer"/>

        <addForeignKeyConstraint baseColumnNames="transaction_type_id"
                                 baseTableName="invoice"
                                 constraintName="fk_invoice_transaction_type_id"
                                 referencedColumnNames="id"
                                 referencedTableName="transaction_type"/>

        <addForeignKeyConstraint baseColumnNames="location_id"
                                 baseTableName="invoice"
                                 constraintName="fk_invoice_location_id"
                                 referencedColumnNames="id"
                                 referencedTableName="location"/>

    </changeSet>
</databaseChangeLog>
