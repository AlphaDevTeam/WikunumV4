<?xml version="1.0" encoding="utf-8"?>
<databaseChangeLog
    xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.6.xsd">
    <!--
        Added the constraints for entity Items.
    -->
    <changeSet id="20191226061637-2" author="jhipster">
        
        <addForeignKeyConstraint baseColumnNames="history_id"
                                 baseTableName="items"
                                 constraintName="fk_items_history_id"
                                 referencedColumnNames="id"
                                 referencedTableName="document_history"/>

        <addForeignKeyConstraint baseColumnNames="related_model_id"
                                 baseTableName="items"
                                 constraintName="fk_items_related_model_id"
                                 referencedColumnNames="id"
                                 referencedTableName="model"/>

        <addForeignKeyConstraint baseColumnNames="related_product_id"
                                 baseTableName="items"
                                 constraintName="fk_items_related_product_id"
                                 referencedColumnNames="id"
                                 referencedTableName="products"/>

        <addForeignKeyConstraint baseColumnNames="location_id"
                                 baseTableName="items"
                                 constraintName="fk_items_location_id"
                                 referencedColumnNames="id"
                                 referencedTableName="location"/>

        <addForeignKeyConstraint baseColumnNames="unit_of_measure_id"
                                 baseTableName="items"
                                 constraintName="fk_items_unit_of_measure_id"
                                 referencedColumnNames="id"
                                 referencedTableName="unit_of_measure"/>

        <addForeignKeyConstraint baseColumnNames="currency_id"
                                 baseTableName="items"
                                 constraintName="fk_items_currency_id"
                                 referencedColumnNames="id"
                                 referencedTableName="currency"/>

        <addForeignKeyConstraint baseColumnNames="items_id"
                                 baseTableName="items_addons"
                                 constraintName="fk_items_addons_items_id"
                                 referencedColumnNames="id"
                                 referencedTableName="items"/>

        <addForeignKeyConstraint baseColumnNames="addons_id"
                                 baseTableName="items_addons"
                                 constraintName="fk_items_addons_addons_id"
                                 referencedColumnNames="id"
                                 referencedTableName="item_add_ons"/>
        
    </changeSet>
</databaseChangeLog>
