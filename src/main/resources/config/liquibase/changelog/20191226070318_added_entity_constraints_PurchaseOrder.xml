<?xml version="1.0" encoding="utf-8"?>
<databaseChangeLog
    xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.6.xsd">
    <!--
        Added the constraints for entity PurchaseOrder.
    -->
    <changeSet id="20191226070318-2" author="jhipster">
        
        <addForeignKeyConstraint baseColumnNames="history_id"
                                 baseTableName="purchase_order"
                                 constraintName="fk_purchase_order_history_id"
                                 referencedColumnNames="id"
                                 referencedTableName="document_history"/>

        <addForeignKeyConstraint baseColumnNames="supplier_id"
                                 baseTableName="purchase_order"
                                 constraintName="fk_purchase_order_supplier_id"
                                 referencedColumnNames="id"
                                 referencedTableName="supplier"/>

        <addForeignKeyConstraint baseColumnNames="location_id"
                                 baseTableName="purchase_order"
                                 constraintName="fk_purchase_order_location_id"
                                 referencedColumnNames="id"
                                 referencedTableName="location"/>

        <addForeignKeyConstraint baseColumnNames="transaction_type_id"
                                 baseTableName="purchase_order"
                                 constraintName="fk_purchase_order_transaction_type_id"
                                 referencedColumnNames="id"
                                 referencedTableName="transaction_type"/>

        <addForeignKeyConstraint baseColumnNames="relatedgrn_id"
                                 baseTableName="purchase_order"
                                 constraintName="fk_purchase_order_relatedgrn_id"
                                 referencedColumnNames="id"
                                 referencedTableName="goods_receipt"/>

    </changeSet>
</databaseChangeLog>
